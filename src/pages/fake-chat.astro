<style>
  @import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&display=swap");
  .messages_container {
    font-family: "IBM Plex Mono", monospace;
    display: flex;
    flex-direction: column-reverse;
  }
  .message {
    display: flex;
    align-items: center;
    margin: 0.5rem;
  }

  .message_viewer-name {
    font-weight: bold;
  }

  .message_userBadge {
    --size: 1rem;
    width: var(--size);
    height: var(--size);
  }

  .message_userBadge-primary {
    z-index: 1;
  }

  .message_viewer {
    display: flex;
  }
  .message_currentMessage-box {
    color: #cccccc;
    display: flex;
  }

  .message_viewer-avatar {
    position: relative;
  }

  .message_viewer-avatarImg {
    --size: 2rem;
    width: var(--size);
    height: var(--size);
    border-radius: 9999px;
    margin-right: 0.5rem;
  }

  .message_currentMessage-otherViewerBadges {
    display: flex;
    align-items: center;
    margin-left: 0.25rem;
  }

  .message_currentMessage-otherViewerBadges::after {
    content: ">";
    margin: 0 0.25rem;
  }
  .message_userBadge-primary {
    position: absolute;
    transform: translate(1.25rem, 0.75rem);
  }

  .new .message_currentMessage-text::after {
    content: "_";
    animation: cursor 250ms linear infinite;
  }

  .message_viewer {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .message_viewer-defaultImg {
    position: absolute;
    top: 0;
  }

  @keyframes cursor {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 100%;
    }
    100% {
      opacity: 0;
    }
  }
</style>
